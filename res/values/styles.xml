    <style name="NavigationTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gainsboro</item>
    </style>

    <style name="leftmenu_bg_base_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:paddingTop">12.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="leftmenu_bg_single_layout" parent="@style/leftmenu_bg_base_layout">
        <item name="android:background">@drawable/leftmenu_bg_single_selector</item>
