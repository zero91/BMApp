<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wheat" >

    <RelativeLayout
        android:id="@+id/zx_detail_top"
        android:layout_width="match_parent"
        android:layout_height="40.0dp"
        android:layout_alignParentTop="true" >

        <ImageButton
            android:id="@+id/zx_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="40.0dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="1.0dp"
            android:background="@drawable/ic_back"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="详情"
            android:textColor="@color/black"
            android:textSize="15.0dp" />
    </RelativeLayout>

    <View
        android:id="@+id/zx_detail_divider"
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_below="@id/zx_detail_top"
        android:background="@color/silver" />

    <LinearLayout
        android:id="@+id/zx_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/zx_detail_message"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3.0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="留言"
            android:textSize="15sp" />

        <Button
            android:id="@+id/zx_detail_contact"
            android:layout_width="0.0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3.0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即联系"
            android:textSize="15sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/zx_detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/zx_detail_bottom"
        android:layout_below="@id/zx_detail_divider" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.boostme.view.CircleImageView
                android:id="@+id/zx_detail_picture"
                android:layout_width="75.0dp"
                android:layout_height="75.0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8.0dp"
                android:layout_marginTop="10.0dp"
                android:background="@drawable/small_image_listpage"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/zx_detail_description"
                    style="@style/item_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="8.0dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="10"
                    android:padding="2.0dp" />

                <TextView
                    android:id="@+id/zx_detail_buynum"
                    style="@style/item_secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/zx_detail_description"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:padding="1.0dp"
                    android:singleLine="true"
                    android:text="25" />

                <TextView
                    android:id="@+id/zx_detail_buytext"
                    style="@style/item_secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zx_detail_description"
                    android:layout_toLeftOf="@id/zx_detail_buynum"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:padding="1.0dp"
                    android:singleLine="true"
                    android:text="交易量:" />

                <TextView
                    android:id="@+id/zx_detail_browsenum"
                    style="@style/item_secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zx_detail_description"
                    android:layout_marginRight="10.0dp"
                    android:layout_toLeftOf="@id/zx_detail_buytext"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:padding="1.0dp"
                    android:singleLine="true"
                    android:text="30" />

                <TextView
                    android:id="@+id/zx_detail_browsetext"
                    style="@style/item_secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zx_detail_description"
                    android:layout_toLeftOf="@id/zx_detail_browsenum"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:padding="1.0dp"
                    android:singleLine="true"
                    android:text="浏览量:" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dip"
                android:background="@color/silver" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/item_secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dp"
                    android:gravity="left"
                    android:padding="1.0dp"
                    android:singleLine="true"
                    android:text="服务分类:" />

                <TextView
                    android:id="@+id/zx_detail_services"
                    style="@style/item_secondary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dp"
                    android:gravity="left"
                    android:maxLines="5"
                    android:padding="2.0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/item_secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dp"
                    android:gravity="left"
                    android:padding="1.0dp"
                    android:singleLine="true"
                    android:text="教育经历:" />

                <TextView
                    android:id="@+id/zx_detail_educations"
                    style="@style/item_secondary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dp"
                    android:gravity="left"
                    android:maxLines="5"
                    android:padding="2.0dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dip"
                android:background="@color/silver" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/item_secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dp"
                    android:gravity="left"
                    android:padding="1.0dp"
                    android:singleLine="true"
                    android:text="价格:" />

                <TextView
                    android:id="@+id/zx_detail_price"
                    style="@style/item_secondary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dp"
                    android:gravity="left"
                    android:padding="2.0dp"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/item_secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dp"
                    android:gravity="left"
                    android:padding="1.0dp"
                    android:singleLine="true"
                    android:text="评价:" />

                <TextView
                    android:id="@+id/zx_detail_score"
                    style="@style/item_secondary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dp"
                    android:gravity="left"
                    android:padding="2.0dp"
                    android:singleLine="true" />
            </LinearLayout>

            <Button
                android:id="@+id/zx_detail_getestimates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15.0dp"
                android:background="@drawable/zx_estimate_btn"
                android:gravity="center"
                android:padding="5.0dp"
                android:text="查看所有评价"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5.0dp"
                android:background="@color/transparent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0dip"
                android:background="@color/silver" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>