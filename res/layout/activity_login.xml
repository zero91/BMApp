<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:md="http://schemas.android.com/apk/res/com.boostme.activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.boostme.activity.MainActivity" >

    <com.boostme.view.EnhanceEditText
        android:id="@+id/login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_password"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        md:hint="请输入用户名" >
    </com.boostme.view.EnhanceEditText>

    <com.boostme.view.EnhancePwText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_username"
        android:layout_centerHorizontal="true"
        md:hint="请输入密码" >
    </com.boostme.view.EnhancePwText>

    <Button
        android:id="@+id/login_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/login_password"
        android:layout_below="@id/login_password"
        android:background="@drawable/card_bt_selector"
        android:gravity="center"
        android:minHeight="24dp"
        android:padding="@dimen/card_content_bt_padding"
        android:text="首次登录？"
        android:textColor="@color/global_highlight"
        android:textSize="@dimen/text_hint" />

    <Button
        android:id="@+id/login_bt"
        style="@style/TagText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_first"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/global_space"
        android:background="@drawable/bt_bg_selector"
        android:paddingBottom="@dimen/global_space"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingTop="@dimen/global_space"
        android:text="登 录"
        android:textSize="@dimen/text_body" />
</RelativeLayout>